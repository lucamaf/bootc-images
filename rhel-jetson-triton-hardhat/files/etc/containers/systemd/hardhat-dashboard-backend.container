[Unit]
Description=Object Detection Dashboard Backend
Wants=network-online.target
After=network-online.target

[Container]
Image=quay.io/luisarizmendi/object-detection-dashboard-backend:prod
AutoUpdate=registry
Network=host

[Service]
ExecStartPre=/bin/sleep 10
Restart=always
TimeoutStartSec=900
RestartSec=30

[Install]
WantedBy=multi-user.target