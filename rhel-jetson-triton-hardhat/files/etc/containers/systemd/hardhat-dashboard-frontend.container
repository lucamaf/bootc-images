[Unit]
Description=Object Detection Dashboard Frontend
Wants=network-online.target
After=network-online.target
Requires=hardhat-dashboard-backend.service

[Container]
Image=quay.io/luisarizmendi/object-detection-dashboard-frontend:prod
AutoUpdate=registry
Network=host
Environment=BACKEND_API_BASE_URL=http://localhost:5005

[Service]
ExecStartPre=/bin/sleep 10
Restart=always
TimeoutStartSec=900
RestartSec=30

[Install]
WantedBy=default.target